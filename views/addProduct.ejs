<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agregar Producto</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">Flexun Store</a>
  </nav>

  <div class="container mt-5">
    <h2 class="text-center">Agregar Producto</h2>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Detalles del Producto</h5>
        <!-- Formulario para agregar productos -->
        <h1>Agregar Nuevo Producto</h1>
        <form action="/products/add" method="POST">
          <label for="name">Nombre del Producto:</label>
          <input type="text" id="name" name="name" required>
      
          <label for="price">Precio:</label>
          <input type="number" id="price" name="price" required>
      
          <label for="description">Descripción:</label>
          <textarea id="description" name="description"></textarea>
      
          <button type="submit">Agregar Producto</button>
        </form>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <h2 class="text-center">Lista de Productos</h2>
    <!-- Mostrar la lista de productos -->
    <ul>
      <% products.forEach(product => { %>
        <li>
          <strong><%= product.name %></strong> - Precio: $<%= product.price %>
          <!-- Agregar botón para comprar el producto -->
          <a href="/products/<%= product._id %>/buy" class="btn btn-primary">Comprar</a>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
